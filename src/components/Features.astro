  <script>
    // Tab switching functionality
    document.addEventListener("DOMContentLoaded", () => {
      const tabButtons = document.querySelectorAll(".tab-button");
      const tabContents = document.querySelectorAll(".tab-content");

      tabButtons.forEach((button) => {
        button.addEventListener("click", () => {
          const tabName = button.getAttribute("data-tab");

          // Reset all buttons
          tabButtons.forEach((btn) => {
            btn.classList.remove("bg-white", "text-black", "text-white");
            btn.classList.add("text-gray-300");
          });

          // Activate clicked button
          button.classList.add("bg-white", "text-black");
          button.classList.remove("text-gray-300", "text-white");

          // Hide all content
          tabContents.forEach((content) => {
            content.classList.add("hidden");
          });

          // Show selected content
          const selectedFeatures = document.getElementById(
            `${tabName}-features`,
          );
          const selectedSubtitle = document.getElementById(
            `${tabName}-subtitle`,
          );
          if (selectedFeatures) selectedFeatures.classList.remove("hidden");
          if (selectedSubtitle) selectedSubtitle.classList.remove("hidden");

          // Hide other subtitle
          const otherTab = tabName === "business" ? "customers" : "business";
          const otherSubtitle = document.getElementById(`${otherTab}-subtitle`);
          if (otherSubtitle) otherSubtitle.classList.add("hidden");
        });
      });
    });
  </script>
