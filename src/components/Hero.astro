---
// Hero section component
---

<section
  class="relative min-h-screen flex items-center justify-center bg-black from-gray-900 to-gray-800 overflow-hidden"
>
  <!-- Background decorative elements -->
  <div class="absolute inset-0 bg-gradient-radial opacity-30"></div>
  <div
    class="absolute top-1/4 left-1/4 w-72 h-72 bg-blue-900/20 rounded-full mix-blend-normal filter blur-xl opacity-70 animate-pulse"
  >
  </div>
  <div
    class="absolute top-1/3 right-1/4 w-72 h-72 bg-purple-900/20 rounded-full mix-blend-normal filter blur-xl opacity-70 animate-pulse animation-delay-2000"
  >
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <div class="max-w-6xl mx-auto">
      <!-- Main headline -->
      <h1 class="text-6xl md:text-7xl font-bold text-white mb-2 leading-tight">
        One spot for all your bookings
      </h1>

      <!-- Subheadline -->
      <p
        class="text-lg md:text-xl text-gray-400 mb-12 max-w-3xl mx-auto leading-relaxed"
      >
        No calls. No endless DMs. Just simple, clean booking — free to use.
      </p>

      <!-- CTA Buttons -->
      <div
        class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-4"
      >
        <a
          href="#"
          class="bg-white text-black px-8 py-3 rounded-2xl text-lg font-semibold hover:bg-gray-100 transition-all duration-200 transform hover:scale-105 shadow-lg"
        >
          Try for Free
        </a>
        <a
          href="#features"
          class="border-2 border-gray-600 text-gray-300 px-8 py-3 rounded-2xl text-lg font-semibold hover:border-gray-500 hover:bg-gray-800 transition-all duration-200"
        >
          Download App
        </a>
      </div>

      <p
        class="text-sm md:text-md text-gray-600 mb-12 max-w-3xl mx-auto leading-relaxed"
      >
        Start free for 2 months — no card required.
      </p>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div
    class="absolute bottom-20 left-1/2 transform -translate-x-1/2 animate-bounce"
  >
    <svg
      class="w-6 h-6 text-gray-600"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>

<style>
  .animation-delay-2000 {
    animation-delay: 2s;
  }
</style>
