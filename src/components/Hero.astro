---
// Hero section component
import Navbar from "./Navbar.astro";
---

<section
  class="relative min-h-screen flex items-center justify-center bg-black overflow-hidden"
>
  <!-- Background Image -->
  <img
    src="/assets/images/landing_hero_bg.png"
    alt="Hero Background"
    class="absolute top-0 inset-0 w-full h-auto object-contain"
  />

  <!-- Navbar positioned at the top of the hero section -->
  <div class="absolute top-0 left-0 w-full z-50">
    <Navbar />
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center z-10">
    <div class="max-w-6xl mx-auto">
      <!-- Badge -->
      <div
        class="inline-flex items-center bg-white text-black px-4 py-2 rounded-full text-sm font-medium mb-4 shadow-lg"
      >
        App for businesses and people
      </div>

      <!-- Main headline -->
      <h1 class="text-6xl md:text-7xl font-bold text-white mb-2 leading-tight">
        One spot for all your bookings
      </h1>

      <!-- Subheadline -->
      <p
        class="text-lg md:text-xl text-gray-300 mb-12 max-w-3xl mx-auto leading-relaxed"
      >
        No calls. No endless DMs. Just simple, clean booking — free to use.
      </p>

      <!-- CTA Buttons -->
      <div
        class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-4"
      >
        <a
          href="https://business.spottly.io"
          class="bg-white text-black px-8 py-3 rounded-2xl text-lg font-semibold transition-transform duration-300 ease-out transform active:scale-95 shadow-lg border-2 border-transparent"
        >
          Try for Free
        </a>
        <a
          href="#features"
          class="border-2 border-gray-600 text-gray-300 px-8 py-3 rounded-2xl text-lg font-semibold transition-transform duration-300 ease-out transform active:scale-95"
        >
          Download App
        </a>
      </div>

      <p
        class="text-sm md:text-md text-gray-600 mb-12 max-w-3xl mx-auto leading-relaxed"
      >
        Start free for 2 months — no card required.
      </p>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div
    class="absolute bottom-20 left-1/2 transform -translate-x-1/2 animate-bounce"
  >
    <svg
      class="w-6 h-6 text-gray-600"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>

<style>
  .animation-delay-2000 {
    animation-delay: 2s;
  }
</style>
